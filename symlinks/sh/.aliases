# vim:ft=sh

alias battery="pmset -g ps"
alias cman="man -S2:3"
alias hide="chflags hidden"
alias irb='irb --readline -r irb/completion'
alias lastsha='git rev-parse HEAD | cut -c1-7'
alias lock="sudo chflags uchg"
alias restartwifi='sh -c "sudo ifconfig en0 down; sudo ifconfig en0 up"'
alias scratch="cd ~/Scratch"
alias sizeof="du -sh"
alias snooze="open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app"
alias suspend='sh -c "/System/Library/CoreServices/Menu\\ Extras/User.menu/Contents/Resources/CGSession -suspend"'
alias unhide="chflags nohidden"
alias unlock="sudo chflags nouchg"
alias vim='gvim -v'
alias whatismyip='dig +short myip.opendns.com @resolver1.opendns.com'
